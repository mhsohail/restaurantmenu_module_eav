<config>
    <modules>
        <Livetameion_Skeleton>
            <version>0.1.0</version>
        </Livetameion_Skeleton>
    </modules>
    <global>
        <models>
            <restaurant>
                <class>Livetameion_Skeleton_Model</class>
                <resourceModel>restaurant_resource</resourceModel>
            </restaurant>
            <restaurant_resource>
                <class>Livetameion_Skeleton_Model_Resource</class>    
                <entities>
                    <item>
                        <table>restaurant_item_entity</table>
                    </item>
                    <item_entity_varchar>
                        <table>restaurant_item_entity_varchar</table>
                    </item_entity_varchar>     
                    <item_entity_text>
                        <table>restaurant_item_entity_text</table>
                    </item_entity_text>                    
                    <item_entity_int>
                        <table>restaurant_item_entity_int</table>
                    </item_entity_int>                     
                </entities>
            </restaurant_resource>
        </models>
        <resources>
            <restaurant_setup>
                <setup>
                    <module>Livetameion_Skeleton</module>
                    <class>Livetameion_Skeleton_Model_Resource_Setup</class>
                </setup>
            </restaurant_setup>
            <restaurant_write>
                <connection>
                    <use>default_write</use>
                </connection>
            </restaurant_write>
            <restaurant_read>
                <connection>
                    <use>default_read</use>
                </connection>
            </restaurant_read>            
        </resources>
    </global>
</config>
